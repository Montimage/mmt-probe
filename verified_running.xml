<probe-cfg xmlns="urn:ietf:params:xml:ns:yang:dynamic-mmt-probe">
  <input-mode>online</input-mode>
  <input-source>eth0</input-source>
  <threads>1</threads>
  <probe-identifier>1</probe-identifier>
  <license-path>/opt/mmt/probe/bin/license.key</license-path>
  <log-path>/opt/mmt/probe/log/online/log.data</log-path>
  <stat-report-period>5</stat-report-period>
  <snap-len>65535</snap-len>
  <number-of-events>2</number-of-events>
  <event-based-reporting>
    <event_id>1</event_id>
    <enable>1</enable>
    <condition>ip.src</condition>
    <total_attr>2</total_attr>
    <attributes>
      <attr_id>1</attr_id>
      <attr>ip.dst</attr>
    </attributes>
    <attributes>
      <attr_id>2</attr_id>
      <attr>ip.version</attr>
    </attributes>
  </event-based-reporting>
  <event-based-reporting>
    <event_id>2</event_id>
    <enable>1</enable>
    <condition>ip.dst</condition>
    <total_attr>2</total_attr>
    <attributes>
      <attr_id>1</attr_id>
      <attr>ip.server_port</attr>
    </attributes>
    <attributes>
      <attr_id>2</attr_id>
      <attr>ip.client_port</attr>
    </attributes>
  </event-based-reporting>
</probe-cfg>
